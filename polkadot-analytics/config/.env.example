# Polkadot Analytics Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# POLKADOT NETWORK CONFIGURATION
# =============================================================================

# Polkadot RPC endpoint for real-time data
POLKADOT_RPC_URL=wss://rpc.polkadot.io

# Subscan API key for additional analytics (get from https://subscan.io/)
SUBSCAN_API_KEY=your_subscan_api_key_here

# Chain IDs for different networks
POLKADOT_CHAIN_ID=0
KUSAMA_CHAIN_ID=2

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/polkadot_analytics

# Alternative for MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/polkadot_analytics

# Database name
DB_NAME=polkadot_analytics

# Connection pool settings
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend server settings
PORT=5000
NODE_ENV=development

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# AI ANALYTICS CONFIGURATION (Optional)
# =============================================================================

# Gemini API key for natural language insights (get from https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# AI service endpoint
AI_SERVICE_URL=http://localhost:8000

# Prediction model settings
PREDICTION_HORIZON_DAYS=30
ANOMALY_DETECTION_THRESHOLD=0.05

# =============================================================================
# ALERT SYSTEM CONFIGURATION
# =============================================================================

# Webhook URL for external alert notifications (Slack, Discord, etc.)
ALERT_WEBHOOK_URL=your_webhook_url_here

# Email configuration for alerts (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Alert thresholds (as percentages)
TVL_DROP_THRESHOLD=-10
TVL_SPIKE_THRESHOLD=20
TRANSACTION_DROP_THRESHOLD=-15
TRANSACTION_SPIKE_THRESHOLD=50
USER_ACTIVITY_DROP_THRESHOLD=-20

# Alert cooldown period (minutes)
ALERT_COOLDOWN_MINUTES=60

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Frontend URL for redirects
FRONTEND_URL=http://localhost:3000

# Wallet connect settings
WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret for API authentication (generate a strong random string)
JWT_SECRET=your_jwt_secret_here

# API key for external integrations
API_KEY=your_api_key_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================

# Data fetching intervals (in minutes)
PARACHAIN_DATA_INTERVAL=5
TVL_DATA_INTERVAL=10
HISTORICAL_DATA_INTERVAL=60

# Scheduler timezone
SCHEDULER_TIMEZONE=UTC

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log file path (optional, logs to console if not set)
LOG_FILE=logs/polkadot-analytics.log

# Log rotation settings
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker container settings
DOCKER_CONTAINER_NAME=polkadot-analytics
DOCKER_IMAGE_TAG=latest

# Health check endpoint
HEALTH_CHECK_PATH=/health

# Graceful shutdown timeout (seconds)
SHUTDOWN_TIMEOUT=30
