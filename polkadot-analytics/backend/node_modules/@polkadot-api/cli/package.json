{
  "name": "@polkadot-api/cli",
  "version": "0.5.0",
  "author": "Victor Oliva (https://github.com/voliva)",
  "license": "MIT",
  "sideEffects": true,
  "type": "module",
  "bin": {
    "papi": "./dist/main.js",
    "polkadot-api": "./dist/main.js"
  },
  "files": [
    "/dist"
  ],
  "exports": {
    ".": {
      "node": {
        "import": "./dist/index.js"
      },
      "types": "./dist/index.d.ts",
      "module": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.0.1",
    "@polkadot-api/wasm-executor": "^0.1.0",
    "@types/node": "^20.12.11",
    "commander": "^12.0.0",
    "fs.promises.exists": "^1.1.4",
    "ora": "^8.0.1",
    "read-pkg": "^9.0.1",
    "rxjs": "^7.8.1",
    "scale-ts": "^1.6.0",
    "tsc-prog": "^2.3.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "write-package": "^7.0.1",
    "ws": "^8.17.0",
    "@polkadot-api/codegen": "0.6.0",
    "@polkadot-api/json-rpc-provider": "0.0.1",
    "@polkadot-api/json-rpc-provider-proxy": "0.1.0",
    "@polkadot-api/metadata-builders": "0.3.0",
    "@polkadot-api/known-chains": "0.1.5",
    "@polkadot-api/sm-provider": "0.1.0",
    "@polkadot-api/observable-client": "0.3.0",
    "@polkadot-api/smoldot": "0.2.4",
    "@polkadot-api/substrate-bindings": "0.5.0",
    "@polkadot-api/substrate-client": "0.1.2",
    "@polkadot-api/utils": "0.1.0",
    "@polkadot-api/ws-provider": "0.1.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "clet": "^1.0.1",
    "@polkadot-api/json-rpc-provider": "0.0.1"
  },
  "scripts": {
    "build": "tsc --noEmit && tsup-node src/main.ts src/index.ts src/metadataWorker.ts --clean --out-dir dist --dts --sourcemap --platform node --format esm",
    "start": "pnpm build && node --enable-source-maps dist/main.js",
    "test": "echo 'no tests'",
    "lint": "prettier --check README.md \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "format": "prettier --write README.md \"src/**/*.{js,jsx,ts,tsx,json,md}\""
  }
}